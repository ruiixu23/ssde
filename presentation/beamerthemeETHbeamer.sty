% === layout variables ========================================================
% first parameter: color (ETHa, ..., ETHi, white) of this header-bar
% second variable: "neg" (white) oder "pos" (black) to load the appropriate ETH-Logo
\newcommand{\eth@bar}[1]{% ETH header bar
 \hspace{2mm}\draw[#1,fill=#1] (0,\eth@barhoch + \anchorheight)--%
 (\eth@barbreit,\eth@barhoch + \anchorheight)--(\eth@barbreit, \anchorheight)--%
 (\eth@barbreit-\eth@baruhb, \anchorheight)--%
 (\eth@barbreit-\eth@baruhb,\eth@baruhh + \anchorheight)--%
 (\eth@baruhb,\eth@baruhh + \anchorheight)--(\eth@baruhb, \anchorheight)--(0, \anchorheight)--%
 (0,\eth@barhoch + \anchorheight);%
 \node [shift={(\eth@shiftx,\eth@shifty + \anchorheight)}]  at (current page.north east)
 {\includegraphics[width=12.8mm]{eth_logo_kurz_neg_13.pdf}};%
}%

\newcommand{\eth@barminimal}{%
 \hspace*{2mm}\vspace*{\eth@barhoch+\eth@baruhh}
 \node [shift={(\eth@shiftx,\eth@shifty + \anchorheight)}]  at (current page.north east)
 {\includegraphics[width=12.8mm]{eth_logo_kurz_pos_13.pdf}};%
}%

\newcommand{\eth@titlepicture}{%  backside of the ETH dome
  \node [shift={(-0.5\paperwidth-0mm,-\paperheight-18.5mm+\anchorheight)}] at
  (current page.north east)
%  {\includegraphics[width=\the\paperwidth-9mm,trim={0mm 75mm 0mm 58mm},clip]{title.jpg}};
  {\includegraphics[width=\the\paperwidth-9mm,trim={0mm 25mm 0mm 38mm},clip]{title.jpg}};
}%

\newcommand{\eth@titlelowerpart}{% the lower colour part of the titlepage
 \hspace{2.5mm}\draw[ETHcolor2,fill=ETHcolor2](0,\eth@hintergrundhoehe+\titleanchorheight)--%
 (\eth@hintergrundbreite,\eth@hintergrundhoehe+\titleanchorheight)--%
 (\eth@hintergrundbreite,\titleanchorheight)--(0,\titleanchorheight)--%
 (0,\eth@hintergrundhoehe+\titleanchorheight);
}

